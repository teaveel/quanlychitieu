<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_purple"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/theme_purple"
        android:layout_marginVertical="30dp"
        android:layout_marginHorizontal="20dp"

        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            >
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/blue_tab_active"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginEnd="30dp"
                    android:text="Chi tiêu" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/silver_tab_inactive"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/white"
                    android:text="Thu nhập" />
            </LinearLayout>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/border_black_bg_white"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày"
                android:textSize="28dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                />
<!--            <DatePicker-->
<!--                android:id="@+id/datePicker1"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:datePickerMode="calendar"-->
<!--                android:calendarViewShown="false"-->
<!--                android:-->
<!--                />-->

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/border_black_bg_white"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fontf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Chi tiêu"
                android:textColor="@color/black"
                android:textSize="28dp" />
            <EditText
                android:id="@+id/inputEmail"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/silver_bg_editText"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginBottom="36px"
                android:hint="0" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:textSize="28dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/border_black_bg_white"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ghi chú"
                android:textSize="28dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/border_black_bg_white"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:paddingBottom="40dp"
            android:orientation="vertical"
            >
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Loại"
                android:textColor="@color/black"
                android:layout_gravity="top"

                android:textSize="28dp" />
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:columnCount="3"
                android:orientation="horizontal"
                android:rowCount="3"
                android:layout_gravity="center"

                >
                <Button
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:backgroundTint="@color/bg_food_icon"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginEnd="30dp"
                    app:icon="@drawable/icon_food"
                    />
                <Button
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:backgroundTint="@color/bg_car_icon"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginEnd="30dp"
                    app:icon="@drawable/icon_car"
                    />
                <Button
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:backgroundTint="@color/bg_shop_icon"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginEnd="30dp"
                    app:icon="@drawable/icon_shopbag"
                    />
                <Button
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:backgroundTint="@color/bg_gift_icon"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginEnd="30dp"
                    app:icon="@drawable/icon_gift"
                    />
                <Button
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:backgroundTint="@color/bg_book_icon"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginEnd="30dp"
                    app:icon="@drawable/icon_book"
                    />
                <Button
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:backgroundTint="@color/bg_heart_icon"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginEnd="30dp"
                    app:icon="@drawable/icon_heart"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_marginEnd="30dp"
                    android:backgroundTint="@color/bg_thunder_icon"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/white"
                    app:icon="@drawable/icon_bill" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:layout_marginEnd="30dp"
                    android:backgroundTint="@color/bg_search_icon"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/white"
                    app:icon="@drawable/icon_diff" />

            </GridLayout>
            <Button
                android:layout_gravity="bottom"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_bold"
                android:backgroundTint="@color/bg_search_icon"
                android:layout_marginBottom="100dp"
                android:text="Xác nhận" />
        </LinearLayout>

