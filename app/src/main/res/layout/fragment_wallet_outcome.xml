<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WalletOutcome">

    <LinearLayout
        android:id="@+id/layoutOutcome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/border_black_bg_white"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày"
                android:textSize="24dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                />
            <Button
                android:id="@+id/inputDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="JAN 01 2020"
                android:textSize="20dp"
                style="?android:spinnerStyle"
                android:textColorHint="@color/bg_car_icon"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:drawableLeft="@drawable/icon_prev"
                android:drawableRight="@drawable/icon_next"
                android:fontFamily="@font/baloo"
                />
<!--            <EditText-->
<!--                android:id="@+id/inputDate"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:backgroundTint="@color/bg_book_icon"-->
<!--                android:inputType="date"-->
<!--                android:maxLines="1"-->
<!--                android:hint="01/01/2022"-->
<!--                android:textSize="20dp"-->
<!--                android:textAlignment="center"-->
<!--                android:layout_marginLeft="36dp"-->
<!--                />-->

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/border_black_bg_white"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chi tiêu"
                android:textSize="24dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                />
            <EditText
                android:id="@+id/inputAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/bg_book_icon"
                android:inputType="number"
                android:maxLines="1"
                android:hint="$"
                android:textSize="20dp"
                android:textAlignment="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/border_black_bg_white"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ghi chú"
                android:textSize="24dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                />

            <EditText
                android:id="@+id/inputNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/bg_book_icon"
                android:inputType="text"
                android:maxLines="1"
                android:hint="note"
                android:textSize="20dp"
                android:textAlignment="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/border_black_bg_white"
            android:paddingHorizontal="12dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Loại"
                android:textColor="@color/black"
                android:layout_gravity="top"
                android:layout_marginTop="24dp"
                android:textSize="24dp" />
            <GridLayout
                android:id="@+id/gridItemOutcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:columnCount="3"
                android:orientation="horizontal"
                android:rowCount="4"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                >
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    >
                    <Button
                        android:id="@+id/gOutcomeItem1"
                        android:contentDescription="C"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:padding="10dp"
                        android:layout_marginEnd="40dp"
                        android:backgroundTint="@color/bg_food_icon"
                        android:drawableRight="@drawable/icon_food"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thức ăn"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    >
                    <Button
                        android:id="@+id/gOutcomeItem2"

                        android:contentDescription="C"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:padding="10dp"
                        android:drawablePadding="30dp"
                        android:layout_marginEnd="40dp"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:backgroundTint="@color/bg_car_icon"
                        android:drawableLeft="@drawable/icon_car" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đi lại"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    >
                    <Button
                        android:id="@+id/gOutcomeItem3"
                        android:contentDescription="C"

                        android:layout_marginEnd="40dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:backgroundTint="@color/bg_shop_icon"
                        android:drawableLeft="@drawable/icon_shopbag"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mua sắm"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    >
                    <Button
                        android:id="@+id/gOutcomeItem4"

                        android:contentDescription="C"
                        android:layout_marginEnd="40dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:padding="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:backgroundTint="@color/bg_gift_icon"
                        android:drawableLeft="@drawable/icon_gift" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quà"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    >
                    <Button
                        android:id="@+id/gOutcomeItem5"

                        android:contentDescription="C"
                        android:layout_marginEnd="30dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:padding="5dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:backgroundTint="@color/bg_book_icon"
                        android:drawableRight="@drawable/icon_book" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giáo dục"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    >
                    <Button
                        android:id="@+id/gOutcomeItem6"
                        android:contentDescription="C"
                        android:layout_marginEnd="30dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:padding="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:backgroundTint="@color/bg_heart_icon"
                        android:drawableLeft="@drawable/icon_heart" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Y tế"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    >
                    <Button
                        android:id="@+id/gOutcomeItem7"
                        android:contentDescription="C"
                        android:layout_marginEnd="30dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:padding="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:backgroundTint="@color/bg_thunder_icon"
                        android:drawableLeft="@drawable/icon_bill" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hóa đơn"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    >
                    <Button
                        android:id="@+id/gOutcomeItem8"
                        android:contentDescription="C"
                        android:layout_marginEnd="30dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:padding="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:backgroundTint="@color/bg_book_icon"
                        android:drawableLeft="@drawable/icon_diff" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Khác"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        />
                </LinearLayout>

            </GridLayout>
            <Button
                android:id="@+id/btnConfirm"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_bold"
                android:backgroundTint="#ACD9E8"
                android:layout_marginBottom="40dp"
                android:textSize="20dp"
                android:text="Xác nhận" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>